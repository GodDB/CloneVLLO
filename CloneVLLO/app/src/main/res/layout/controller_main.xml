<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/black"
    android:descendantFocusability="blocksDescendants"
    >

    <ImageView
        android:id="@+id/cate_btn"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/guide_left"
        android:src="@drawable/ic_baseline_menu_24"
        />

    <ImageView
        android:id="@+id/alarm_btn"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="@id/guide_right"
        android:src="@drawable/ic_baseline_add_alert_24"
        />

    <ImageView
        android:id="@+id/primium_btn"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintRight_toLeftOf="@id/alarm_btn"
        app:layout_constraintLeft_toLeftOf="@id/cate_btn"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.95"
        android:src="@drawable/ic_baseline_storefront_24"
        />

    <androidx.constraintlayout.widget.Group
        android:id="@+id/main_gif_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:constraint_referenced_ids="main_gif, main_gif_btn, main_gif_txt"
        />

    <androidx.constraintlayout.widget.Group
        android:id="@+id/main_video_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:constraint_referenced_ids="main_video, main_video_btn, main_video_txt"
        />

    <VideoView
        android:id="@+id/main_video"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintLeft_toLeftOf="@id/guide_left"
        app:layout_constraintRight_toRightOf="@id/guide_right"
        app:layout_constraintTop_toBottomOf="@id/cate_btn"
        app:layout_constraintBottom_toBottomOf="@id/guide_video_bottom"
        android:layout_marginTop="20dp"
        android:background="@drawable/rounded_corner"
        />
    <Button
        android:id="@+id/main_video_btn"
        android:layout_width="180dp"
        android:layout_height="30dp"
        app:layout_constraintTop_toBottomOf="@id/main_video"
        app:layout_constraintRight_toRightOf="@id/guide_right"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.9"
        android:background="@drawable/rounded_corner_pink"
        android:textSize="18sp"
        android:layout_marginTop="10dp"
        android:text="+   비디오 만들기"
        />
    <TextView
        android:id="@+id/main_video_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/main_video_btn"
        app:layout_constraintRight_toRightOf="@id/main_video_btn"
        android:layout_marginTop="5dp"
        android:textColor="@color/textGray"
        android:text="@string/main_video_txt"
        />
    <VideoView
        android:id="@+id/main_gif"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/main_video_txt"
        app:layout_constraintLeft_toLeftOf="@id/guide_left"
        app:layout_constraintRight_toRightOf="@id/guide_right"
        app:layout_constraintBottom_toBottomOf="@id/guide_gif_bottom"
        android:layout_marginTop="20dp"
        android:background="@drawable/rounded_corner"
        />

    <Button
        android:id="@+id/main_gif_btn"
        android:layout_width="180dp"
        android:layout_height="30dp"
        app:layout_constraintTop_toBottomOf="@id/main_gif"
        app:layout_constraintRight_toRightOf="@id/guide_right"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.9"
        android:background="@drawable/rounded_corner_pink"
        android:textSize="18sp"
        android:layout_marginTop="10dp"
        android:text="+   GIF 만들기"
        />
    <TextView
        android:id="@+id/main_gif_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/main_gif_btn"
        app:layout_constraintRight_toRightOf="@id/main_gif_btn"
        android:layout_marginTop="5dp"
        android:textColor="@color/textGray"
        android:text="@string/main_gif_txt"
        />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guide_video_bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.4"
        />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guide_gif_bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.8"
        />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guide_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.03"
        />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guide_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.03"
        />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guide_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.97"
        />
</androidx.constraintlayout.widget.ConstraintLayout>