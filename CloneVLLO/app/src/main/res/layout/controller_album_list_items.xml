<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/album_list_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/rightgray"
    android:layout_marginBottom="2dp"
    >

    <ImageView
        android:id="@+id/album_list_img"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="10dp"
        />

    <TextView
        android:id="@+id/album_list_txt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/album_list_img"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/album_list_count"
        android:text="@string/basic"
        app:layout_constraintVertical_chainStyle="packed"
        android:layout_marginStart="20dp"
        android:textColor="@color/white"
        />

    <TextView
        android:id="@+id/album_list_count"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/album_list_img"
        app:layout_constraintTop_toBottomOf="@id/album_list_txt"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="@string/basic"
        android:layout_marginStart="20dp"
        />
</androidx.constraintlayout.widget.ConstraintLayout>